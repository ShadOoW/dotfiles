[Unit]
Description=Signal CLI daemon (phone-to-desktop sync)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=%h/.config/signal-sync/signal-daemon.sh
Restart=on-failure
RestartSec=10
Environment=XDG_CONFIG_HOME=%h/.config
Environment=XDG_DATA_HOME=%h/.local/share

[Install]
WantedBy=default.target
