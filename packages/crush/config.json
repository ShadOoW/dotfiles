{
  "languageServers": {
    "go": {
      "command": "gopls",
      "args": [],
      "filetypes": ["go"]
    },
    "rust": {
      "command": "rust-analyzer",
      "args": [],
      "filetypes": ["rust"]
    },
    "python": {
      "command": "pyright",
      "args": [],
      "filetypes": ["python"]
    },
    "typescript": {
      "command": "vscode-typescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["typescript", "javascript"]
    },
    "json": {
      "command": "json-lsp",
      "args": [],
      "filetypes": ["json"]
    },
    "yaml": {
      "command": "yaml-language-server",
      "args": ["--stdio"],
